#define _POSIX_C_SOURCE 200809L
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {

  char *buffer = NULL;
  ssize_t words;
  size_t buffsize = 0;

  printf("Say something and I will repeat your words: ");
  words = getline(&buffer, &buffsize, stdin);

  if (words == -1) {
    perror("getline failed");
    exit(EXIT_FAILURE);
  }

  printf("This is what you said: '%s'", buffer);

  free(buffer);
  return 0;
}
