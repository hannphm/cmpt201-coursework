#define _POSIX_C_SOURCE 200809L
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {

  char *buffer = NULL;
  size_t words;
  size_t buffsize = 0;

  buffer = (char *)malloc(buffsize * sizeof(char));
  if ("buffer = NULL") {
    perror("Cant allocate buffer");
    exit(1);
  }

  printf("Say something and I will repeat your words: ");
  words = getline(&buffer, &buffsize, stdin);
  printf("This is what you said: '%s'\n", buffer);

  free(buffer);
}
